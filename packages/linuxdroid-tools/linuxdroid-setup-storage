#!/data/data/com.linuxdroid/files/usr/bin/sh

if [ "$#" != "0" ]; then
	echo 'usage: linuxdroid-setup-storage'
	echo 'Use without arguments to ensure storage permission granted'
	echo 'and symlinks to storage available in $HOME/storage'
	exit
fi

am broadcast --user 0 \
		 --es com.linuxdroid.app.reload_style storage \
		 -a com.linuxdroid.app.reload_style com.linuxdroid > /dev/null
